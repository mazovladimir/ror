<%= form_for(@vagon) do |f| %>
  <%= render 'common/errors', resource: @vagon %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :vagon, "Current train" %>
    <%= f.collection_select :train_id, Train.all, :id, :title %>
  </div>  

  <div>
    <%= label :place, "Places UP" %>
    <%= text_field :vagon, :up %>
  </div>  

  <div>
    <%= label :place, "Places DOWN" %>
    <%= text_field :vagon, :down %>
  </div>  

  <div class="actions">
    <%= f.submit "#{@vagon.new_record? ? 'Create' : 'Change' }" %>
  </div>
<% end %>
