<h1>Новый вагон</h1>

<%= form_for [@train, @vagon] do |f| %>
    <div class="field">
      <%= f.label :vagon_type, "Vagon Type" %>
      <%= f.collection_select :train_id, Vagon.all, :id, :vagon_type %>
    </div><br>

    <div class="field">
      <%= f.label :top_seats %><br>
      <%= f.number_field :top_seats %>
    </div>

    <div class="field">
      <%= f.label :bottom_seats %><br>
      <%= f.number_field :bottom_seats %>
    </div>

    <div class="field">
      <%= f.label :side_top_seats %><br>
      <%= f.number_field :side_top_seats %>
    </div>

    <div class="field">
      <%= f.label :side_bottom_seats %><br>
      <%= f.number_field :side_bottom_seats %>
    </div>

    <div class="actions">
      <%= f.submit "Создать" %>
    </div>
<% end %>
