<h1>Новый вагон</h1>

<%= render 'common/errors', resource: @vagon %>

<%= form_for [:admin, @train, @vagon], url: admin_train_vagons_path do |f| %>
    <div class="field">
      <%= f.label :type, "Тип вагона" %>
      <%= select("vagon", "type", @my_vagons.each {|p| [ p ] }, { include_blank: true }) %>
    </div> <br>

    <div class="field">
      <%= f.label :top_seats, "Верхние места" %><br>
      <%= f.number_field :top_seats %>
    </div>

    <div class="field">
      <%= f.label :bottom_seats, "Нижние места" %><br>
      <%= f.number_field :bottom_seats %>
    </div>

    <div class="field">
      <%= f.label :side_top_seats, "Боковые верхние места" %><br>
      <%= f.number_field :side_top_seats %>
    </div>

    <div class="field">
      <%= f.label :side_bottom_seats, "Боковые нижние места" %><br>
      <%= f.number_field :side_bottom_seats %>
    </div>

    <div class="actions">
      <%= f.submit "Создать" %>
    </div>
<% end %>
