<h1>Список маршрутов</h1>
<table>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
 
  <% @routes.each do |route| %>
    <tr>
      <td><%= route.title %></td>
      <td><%= link_to 'Показать', route_path(route) %></td>
      <td><%= link_to 'Редактировать', edit_route_path(route) %></td>
      <td><%= link_to 'Удалить', route_path(route),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>

<p>
<%= link_to 'Новый маршрут', new_route_path %>
<%= link_to 'Перейти к станциям', railway_stations_path %>
<%= link_to 'Перейти к поездам', trains_path %>
</p>
