<%= form_for(@ticket) do |f| %>
  <%= render 'common/errors', resource: @ticket %>

  <div class="field"><br>
    <%= f.label :name, "Имя" %>
    <%= f.text_field :name %>
  </div>

  <div class="field"><br>
    <%= f.label :surname, "Фамилия" %>
    <%= f.text_field :surname %>
  </div>

  <div class="field"><br>
    <%= f.label :middlename, "Отчество" %>
    <%= f.text_field :middlename %>
  </div>

  <div class="field"><br>
    <%= f.label :passport, "Паспорт" %>
    <%= f.text_field :passport %>
  </div>


  <div class="actions"><br>
    <%= f.submit "#{@ticket.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>
